# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#The ordering of these are important
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /management$path<.*>        controllers.Management.apply(path)
POST    /management$path<.*>        controllers.Management.apply(path)

GET     /pages$path<.*>                controllers.FrontController.render(path)


#supports local dev machine when not behind nginx
#GET     /*path                      controllers.FrontController.render(path)
